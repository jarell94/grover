{
  "dashboard": {
    "id": null,
    "uid": "grover-overview",
    "title": "Grover - Overview Dashboard",
    "tags": ["grover", "overview"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "sum(rate(grover_http_requests_total[5m]))",
            "legendFormat": "Requests/sec"
          }
        ]
      },
      {
        "id": 2,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
        "targets": [
          {
            "expr": "sum(rate(grover_http_requests_total{status=~\"5..\"}[5m])) / sum(rate(grover_http_requests_total[5m])) * 100",
            "legendFormat": "Error %"
          }
        ]
      },
      {
        "id": 3,
        "title": "Active Users",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "grover_active_users_total",
            "legendFormat": "Active Users"
          }
        ]
      },
      {
        "id": 4,
        "title": "Active Streams",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
        "targets": [
          {
            "expr": "grover_active_streams",
            "legendFormat": "Live Streams"
          }
        ]
      },
      {
        "id": 5,
        "title": "Request Latency (P95)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(grover_http_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "P95 Latency"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(grover_http_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "P50 Latency"
          }
        ]
      },
      {
        "id": 6,
        "title": "Requests by Endpoint",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
        "targets": [
          {
            "expr": "sum(rate(grover_http_requests_total[5m])) by (handler)",
            "legendFormat": "{{handler}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Posts Created",
        "type": "timeseries",
        "gridPos": { "h": 6, "w": 8, "x": 0, "y": 12 },
        "targets": [
          {
            "expr": "sum(rate(grover_posts_created_total[5m])) by (post_type)",
            "legendFormat": "{{post_type}}"
          }
        ]
      },
      {
        "id": 8,
        "title": "Authentication Attempts",
        "type": "timeseries",
        "gridPos": { "h": 6, "w": 8, "x": 8, "y": 12 },
        "targets": [
          {
            "expr": "sum(rate(grover_auth_attempts_total[5m])) by (status)",
            "legendFormat": "{{status}}"
          }
        ]
      },
      {
        "id": 9,
        "title": "Transactions",
        "type": "timeseries",
        "gridPos": { "h": 6, "w": 8, "x": 16, "y": 12 },
        "targets": [
          {
            "expr": "sum(rate(grover_transactions_total[5m])) by (type, status)",
            "legendFormat": "{{type}} - {{status}}"
          }
        ]
      },
      {
        "id": 10,
        "title": "Database Query Latency",
        "type": "heatmap",
        "gridPos": { "h": 6, "w": 24, "x": 0, "y": 18 },
        "targets": [
          {
            "expr": "sum(rate(grover_db_query_latency_seconds_bucket[5m])) by (le, collection)",
            "legendFormat": "{{collection}}"
          }
        ]
      }
    ]
  }
}
